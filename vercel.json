{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "cd polish-clothing-website && npm run build",
  "outputDirectory": "polish-clothing-website/dist",
  "devCommand": "cd polish-clothing-website && PORT=${PORT:-5173} npm run dev -- --host --port ${PORT:-5173}",
  "installCommand": "cd polish-clothing-website && npm install",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
